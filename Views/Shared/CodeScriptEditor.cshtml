@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div class="modal fade" role="dialog" data-bind="modal: isVisible, modalBeforeClose: onClosingDialog">
    <div class="modal-dialog gn-codeScriptEditorDialog" data-bind="if: isVisible">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span data-bind="visible: !isEditing()">@Localizer["CreateCodeScript"]</span><span data-bind="visible: isEditing">@Localizer["EditCodeScript"]</span></h4>
            </div>
            <div class="modal-body">
                <form id="gn-codeScriptEditorForm">
                    <div class="form-group">
                        <label for="gn-scriptCodeName">@Localizer["Name"]</label>
                        <input type="text" class="form-control" id="gn-scriptCodeName" placeholder="@Localizer["Name"]" name="scriptCodeName" data-bind="value: scriptName" required/>
                    </div>
                    <div class="form-group" data-bind="if: codeEditorTheme() && codeEditorScriptLanguage()">
                        <label for="gn-scriptCode">@Localizer["Code"]</label>
                        <div id="gn-scriptCode" data-bind="codeEditor: scriptCode, codeEditorTheme: codeEditorTheme, codeEditorMode: codeEditorScriptLanguage" class="gn-exportManageTemplateCodeEditor"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">   
                <button type="button" class="btn btn-primary" data-bind="click: saveCode">@Localizer["Confirm"]</button>
                <button type="button" class="btn btn-default" data-bind="click: cancelDialog">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" data-bind="modal: showConfirmCloseDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Localizer["AreYouSure"]</h4>
            </div>
            <div class="modal-body">
                <p>@Localizer["ThereAreUnsavedChanges"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: confirmCloseDialog">@Localizer["Yes"]</button>
                <button type="button" class="btn btn-default" data-bind="click: cancelCloseDialog">@Localizer["No"]</button>
            </div>
        </div>
    </div>
</div>